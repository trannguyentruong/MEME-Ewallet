<div class="forgot-pwd--container">
    <a href="/" class="brand--logo">
        <h3 class="my-4 ml-5 text-dark ">Meme.</h3>
    </a>

    <!-- Form with email and phone number -->
    <div class="forgot-pwd--form-otp">
        <h3 class="text-center mb-5">Reset Password</h3>
        <form method="POST" id="otpForm">
            <div class="form-group mb-3">

                <label>Email</label>


                <input name="email" type="email" class="form-control">

            </div>
            <div class="form-group text-center ">
                <!-- Change to type='submit' later -->
                <button class="btn" id="btn-otp" type="button">Get OTP</button>
            </div>
        </form>
    </div>

    <!-- Form change password -->
    <div class="forgot-pwd--form-pwd">
        <h3 class="text-center mb-5">Change Password</h3>
        <form method="POST" id="otpForm">
            <div class="form-group mb-3">

                <label>Enter New Password</label>


                <input name="newpwd" type="password" class="form-control" maxlength="6" pattern="[0-9]+">

            </div>
            <div class="form-group mb-3">

                <label>Re-enter New Password</label>
                <input name="renewpwd" type="password" class="form-control" maxlength="6" pattern="[0-9]+">
            </div>
            <div class="form-group text-center ">
                <!-- Change to type='submit' later -->
                <a><button class="btn btn-re-pass" type="button">Change</button></a>
            </div>
        </form>
    </div>
</div>


<!-- OTP Modal -->

<!-- When submit email and phone number, this modal will be shown, enter OTP here, 
    if OTP correct, the form will be changed into change password form -->
<div class="modal fade" id="otpModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">OTP Vertification</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body">
                <!-- need to pass the user email into modal -->
                <p>OTP will disable after 1 minute</p>
                <p class="text-center">Please enter the OTP already sent to <strong class="account-email"></strong></p>
                <form method="get" class="digit-group" data-group-name="digits" data-autosubmit="false"
                    autocomplete="off">
                    <div class="test">
                        <input type="text" id="digit-1" name="digitMono" data-next="digit-2" class="form-control" />
                        <input type="text" id="digit-2" name="digitDi" data-next="digit-3" data-previous="digit-1"
                            class="form-control" />
                        <input type="text" id="digit-3" name="digitTri" data-next="digit-4" data-previous="digit-2"
                            class="form-control" />
                        <input type="text" id="digit-4" name="digitTetra" data-next="digit-5" data-previous="digit-3"
                            class="form-control" />
                        <input type="text" id="digit-5" name="digitPenta" data-next="digit-6" data-previous="digit-4"
                            class="form-control" />
                        <input type="text" id="digit-6" name="digitHexa" data-previous="digit-5" class="form-control" />

                    </div>

                </form>

            </div>

            <div class="modal-footer">
                <button type="button" id="btn-submit-otp" style="color:black" class="btn btn-primary ">Verify</button>
                <button type="button" class="btn btn-otp btn-outline-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<!-- Correct OTP Alert -->
<div class="alert alert-success alert-dismissible fade hide" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<!-- Wrong OTP Alert -->
<div id="alert-error" class="alert alert-danger alert-dismissible fade hide" role="alert">
    Change password successfully, <a href="/login">Click here for login now</a>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>