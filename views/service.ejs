<!-- Fail alert -->
<div class="alert alert-danger alert-dismissible" id="withdrawInvalidCard" role="alert">
    Invalid Card Information
    <button type="button" class="close" onclick="$('#withdrawInvalidCard').hide()">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="alert alert-danger alert-dismissible" id="withdrawNotSupport" role="alert">
    This card is not supported for withdrawals.
    <button type="button" class="close" onclick="$('#withdrawNotSupport').hide()">
        <span aria-hidden="true">&times;</span>
    </button>
</div>